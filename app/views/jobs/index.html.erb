<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<table id="example" class="table table-striped" style="width:100% !important">
  <thead>
  <tr>
    <th>Company & Recruiter</th>
    <th>Stage</th>
    <th>Role & Technologies</th>
    <th>Next Meetup</th>
  </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <%= render "job_rows", :job => job %>
    <% end %>
  </tbody>
  <tfoot>
  <tr>
    <th>Company & Recruiter</th>
    <th>Stage</th>
    <th>Role & Technologies</th>
    <th>Next Meetup</th>
  </tr>
  </tfoot>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
