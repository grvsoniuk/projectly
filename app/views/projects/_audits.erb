<ol class="list-group list-group-numbered">
  <% audits.each do |audit| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold"><%= audit.auditable_type %> : <%= audit.action %></div>
        <%= audit.audited_changes.to_s %>
      </div>
      at&nbsp;<span class="badge bg-primary rounded-pill">at <%= audit.created_at %></span>&nbsp;by&nbsp;<span class="badge bg-secondary rounded-pill"><i><%= User.find(audit.user_id).username %></i></span>
    </li>
  <% end %>
</ol>